<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="pl.edu.agh.ki.to2.monitor.gui" level="INFO"/>
    <logger name="pl.edu.agh.ki.to2.monitor.messaging" level="INFO"/>
    <logger name="pl.edu.agh.ki.to2.monitor.model" level="INFO"/>

</configuration>